global:
  scrape_interval:     5s # By default, scrape targets every 15 seconds.
  evaluation_interval: 5s

# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
scrape_configs:
  - job_name: 'capture-detection'
    scrape_interval: 5s
    static_configs:
      - targets: ["{{ hostvars[groups['capture-detection-grp'][0]].private_address }}:8000"]
  - job_name: 'filter'
    scrape_interval: 5s
    static_configs:
      - targets: ["{{ hostvars[groups['filter-grp'][0]].private_address }}:8001"]
  - job_name: 'ocr'
    scrape_interval: 5s
    static_configs:
      - targets: ["{{ hostvars[groups['ocr-grp'][0]].private_address }}:8002"]